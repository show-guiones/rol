                        action.model_tags.includes(model)
                    );
                    if (modelMatches.length > 0) {
                        coherentAction = randomItem(modelMatches);
                    } else {
                        // 5. Fallback: random action
                        coherentAction = randomItem(allAcciones);
                    }
                }
            }
        }

        const card = document.createElement('div');
        card.classList.add('script-card');
        card.dataset.modelProfile = model.toLowerCase();
        card.dataset.userProfile = user.toLowerCase();
        card.dataset.fetish = fetish.toLowerCase();

        card.innerHTML = `
        <div class="card-profiles">
            <span class="profile-tag model-profile">${model.charAt(0).toUpperCase() + model.slice(1)}</span>
            <span class="profile-tag user-profile">${user.charAt(0).toUpperCase() + user.slice(1)}</span>
        </div>
        <p class="script-text">Guion de ejemplo ${i}: interacción con un usuario ${user} enfocada en ${fetish}.</p>
