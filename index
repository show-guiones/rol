        const model = randomItem(models);
        const user = randomItem(users);
        const fetish = randomItem(fetiches);

        let coherentAction = null;

        // 1. Try to find a perfect match (model, user, fetish)
        const perfectMatches = allAcciones.filter(action =>
            action.model_tags.includes(model) &&
            action.user_tags.includes(user) &&
            action.fetish_tags.includes(fetish)
        );
        if (perfectMatches.length > 0) {
            coherentAction = randomItem(perfectMatches);
        } else {
            // 2. Try to find a match for model + fetish
            const modelFetishMatches = allAcciones.filter(action =>
                action.model_tags.includes(model) &&
                action.fetish_tags.includes(fetish)
            );
            if (modelFetishMatches.length > 0) {
                coherentAction = randomItem(modelFetishMatches);
            } else {
                // 3. Try to find a match for model + user
                const modelUserMatches = allAcciones.filter(action =>
                    action.model_tags.includes(model) &&
                    action.user_tags.includes(user)
                );
                if (modelUserMatches.length > 0) {
                    coherentAction = randomItem(modelUserMatches);
