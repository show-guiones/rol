        `;
        container.appendChild(card);
    }

    const cards = document.querySelectorAll('.script-card');
    const favoriteButtons = document.querySelectorAll('.favorite-btn');

    const filterScripts = () => {
        const selectedUser = userFilter.value.toLowerCase();
        // Get selected fetishes, handling "all" option
        let selectedFetishes = Array.from(fetishFilter.selectedOptions).map(o => o.value.toLowerCase());

        cards.forEach(card => {
            const modelMatch = activeModelTab === 'all' || card.dataset.modelProfile === activeModelTab;
            const userMatch = selectedUser === 'all' || card.dataset.userProfile === selectedUser;

            let fetishMatch = false;
            if (selectedFetishes.includes('all') || selectedFetishes.length === 0) {
                fetishMatch = true; // If 'all' is selected or no specific fetishes are chosen, match all
            } else {
                // If specific fetishes are selected, check if the card's fetish is among them
                fetishMatch = selectedFetishes.includes(card.dataset.fetish);
            }
            
            card.style.display = (modelMatch && userMatch && fetishMatch) ? 'flex' : 'none';
        });
    };

    tabs.forEach(tab => {
        tab.addEventListener('click', () => {
            tabs.forEach(t => t.classList.remove('active'));
            tab.classList.add('active');
            activeModelTab = tab.dataset.modelProfile.toLowerCase();
            filterScripts();
        });
    });

    userFilter.addEventListener('change', filterScripts);
    fetishFilter.addEventListener('change', filterScripts);

    favoriteButtons.forEach(button => {
        button.addEventListener('click', () => {
            button.classList.toggle('favorited');
        });
    });
});
